{
    "repositories": [
        {
            "type": "path",
            "url": "../"
        }
    ],
    "require": {
        "symfony/symfony": "~2.6",
        "symfony/monolog-bundle": "~2.4",
        "twig/extensions": "~1.0",
        "sensio/distribution-bundle": "~3.0.12",
        "sensio/framework-extra-bundle": "~3.0,>=3.0.2",
        "pomm-project/cli": "~2.0@dev",
        "pomm-project/foundation": "~2.0@dev",
        "pomm-project/pomm-bundle": "~2.0@dev",
        "pomm-project/model-manager": "~2.0@dev",
        "pomm-project/pomm-symfony-bridge": "~2.0@dev"
    },
    "require-dev": {
        "behat/mink-extension": "~2.0",
        "behat/mink-goutte-driver": "*",
        "behat/mink-selenium2-driver": "*"
    },
    "autoload": {
        "psr-0": {
            "": "src/",
            "SymfonyStandard": "app/"
        }
    },
    "autoload-dev": {
        "files": ["tests/Features/bootstrap/FeatureContext.php"]
    },
    "config": {
        "bin-dir": "bin"
    },
    "scripts": {
        "post-root-package-install": [
            "SymfonyStandard\\Composer::hookRootPackageInstall"
        ],
        "post-install-cmd": [
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::removeSymfonyStandardFiles"
        ],
        "post-update-cmd": [
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::removeSymfonyStandardFiles"
        ]
    }
}
